<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.imoz.pojos.Curso" table="curso">
        <id name="id" type="string" column="chrCurCodigo">
            <generator class="assigned"></generator>
        </id>

        <property name="nombre" type="string" column="vchCurNombre"></property>
        <property name="creditos" type="int" column="intCurCredito"></property>
    </class>
    
</hibernate-mapping>
